# App
APP_HOST=0.0.0.0
APP_PORT=8000

# Postgres metadata
POSTGRES_USER=rag
POSTGRES_PASSWORD=ragpass
POSTGRES_DB=ragdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Chroma
CHROMA_DIR=/data/chroma

# LLM / Embeddings provider (example: OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4o-mini # example, change as needed

# Limits
MAX_DOCUMENTS=20
MAX_PAGES_PER_DOC=1000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector provider: CHROMA | PINECONE | WEAVIATE
VECTOR_PROVIDER=CHROMA

# Pinecone (if used)
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX=rag-index

# Weaviate (if used)
WEAVIATE_URL=
WEAVIATE_API_KEY=
WEAVIATE_INDEX=rag_index
